<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pg_1"
    tools:context=".Tela7">

    <Button
        android:id="@+id/btn_consultinf"
        android:layout_width="208dp"
        android:layout_height="90dp"
        android:layout_marginTop="48dp"
        android:shadowColor="#00FFFFFF"
        android:text="Alterar Consulta"
        android:textSize="20sp"
        app:backgroundTint="#1B53AF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.458"
        tools:ignore="UnknownIdInLayout" />

    <Button
        android:id="@+id/btn_newconsult"
        android:layout_width="208dp"
        android:layout_height="90dp"
        android:layout_marginTop="48dp"
        android:shadowColor="#00FFFFFF"
        android:text="Nova Consulta"
        android:textSize="20sp"
        app:backgroundTint="#1B53AF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.264"
        tools:ignore="UnknownIdInLayout" />

    <Button
        android:id="@+id/btn_config"
        android:layout_width="217dp"
        android:layout_height="94dp"
        android:layout_marginTop="48dp"
        android:text="Configurções"
        android:textSize="20sp"
        app:backgroundTint="#1B53AF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.862"
        tools:ignore="UnknownIdInLayout" />

    <Button
        android:id="@+id/btn_prf"
        android:layout_width="209dp"
        android:layout_height="89dp"
        android:layout_marginTop="48dp"
        android:text="Perfil"
        android:textSize="20sp"
        app:backgroundTint="#1B53AF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.654"
        tools:ignore="UnknownIdInLayout" />

    <TextView
        android:id="@+id/title_"
        android:layout_width="376dp"
        android:layout_height="116dp"
        android:background="#002196F3"
        android:shadowColor="#0632BA"
        android:text="Selecione uma opção:"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#FFFFFF"
        android:textColorHint="#000000"
        android:textSize="48sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.025" />

</androidx.constraintlayout.widget.ConstraintLayout>
